{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  }
}
